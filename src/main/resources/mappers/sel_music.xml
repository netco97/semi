<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.th.MusicMapper">


	<select id="searchTag" resultType="SongsDTO">
		SELECT *
		FROM songs
		WHERE
		<if test="genreArray[0] == 'all'">
			(genre_id like '%')
		</if>
		<if test="genreArray[0] != 'all'">
			<foreach collection="genreArray" item="genre" open="("
				close=")" separator=" or ">
				genre_id like '%' || #{genre} || '%'
			</foreach>
		</if>
		and
		<if test="moodArray[0] == 'all'">
			mood_id like '%'
		</if>
		<if test="moodArray[0] != 'all'">
			<foreach collection="moodArray" item="mood" open="("
				close=")" separator=" and ">
				mood_id like '%' || #{mood} || '%'
			</foreach>
		</if>
		and
		<if test="instrumentArray[0] == 'all'">
			(instrument_id like '%')
		</if>
		<if test="instrumentArray[0] != 'all'">
			<foreach collection="instrumentArray" item="instrument"
				open="(" close=")" separator=" and ">
				instrument_id like '%' || #{instrument}
				|| '%'
			</foreach>
		</if>
	</select>

	<select id="searchText"
		resultType="SongsDTO">
		SELECT * FROM songs
		WHERE
		song_name LIKE '%' || #{text} || '%' 
		OR genre_id LIKE '%' || #{text} || '%'
		OR instrument_id LIKE '%' || #{text} || '%'
		OR mood_id LIKE '%' || #{text} || '%'
		OR composer_name LIKE '%' || #{text} || '%'
	</select>
	
	<select id="getMusicDetail" resultType="SongsDTO">
		SELECT * FROM songs
		WHERE song_id = #{song_id}
	</select>

</mapper>